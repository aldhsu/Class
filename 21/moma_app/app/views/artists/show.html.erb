<h2><%= @artist.name %></h2>
<ul>
  <li><%= image_tag(@artist.image, class: 'medium') %></li>
  <li><%= @artist.nationality %></li>
  <li><%= @artist.dob.strftime('%B %d %Y') %></li>
  <li><%= @artist.period %></li>
</ul>
<% @artist.works.each do |work| %>
  <ul class="works">
    <li><%= link_to(work.title, work) %></li>
    <li><%= image_tag(work.image, class: 'small') %></li>
  </ul>
<% end %>